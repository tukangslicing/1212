        span.currency  USD
        span.price  #{price}


mixin postHeader(label, title)
  article.post-header
    label.block.text-u-c #{label}
    h3.text-u-c.m-t-none
      a(href="blog-detail.html", title="#{title}") #{title}

mixin headerActive(current)
  div.navbar.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        a.navbar-brand(href='index.html', title='TS Starter')
          img(src='img/sapta-tour-logo.png', title='TS Starter')
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav.main-menu
          if (current == 'tours')
            li(class="active")
              a(href='tours.html')
                i.ico.ico-tours
                span.block TOURS

              include ../form/tour
          else
            li
              a(href='tours.html')
                i.ico.ico-tours
                span.block TOURS

              include ../form/tour

          if (current == 'fights')
            li(class="active")
              a(href='flights.html')
                i.ico.ico-flight
                span.block BOOK FLIGHTS

              include ../form/flight

          else
            li
              a(href='flights.html')
                i.ico.ico-flight
                span.block BOOK FLIGHTS

              include ../form/flight

          if (current == 'hotels')
            li(class="active")
              a.hotel(href='#hotels')
                i.ico.ico-hotel
                span.block BOOK HOTELS
          else
            li()
              a.hotel(href='#hotels')
                i.ico.ico-hotel
                span.block BOOK HOTELS

          if (current == "documents")
            li(class="active")
              a(href='#documents')
                i.ico.ico-document
                span.block DOCUMENTS
          else
            li
              a(href='#documents')
                i.ico.ico-document
                span.block DOCUMENTS

          if (current == 'blog')
            li(class="active")
              a(href='blog.html')
                i.ico.ico-blog
                span.block BLOG
          else
            li
              a(href='blog.html')
                i.ico.ico-blog
                span.block BLOG

        ul.nav.navbar-nav.navbar-right
          li
            a.b-r-white(href='login.html') Login
          li
            a(href='register.html') Register

      .clearfix


