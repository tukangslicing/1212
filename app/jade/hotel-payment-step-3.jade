extends layouts/default

include include/mixin

block main
  mixin headerHotelPayment(3)

  .booking-page.hotel-payment
    .wrapping-gray
    .container.display-table
      .content-left.display-cell.p-t-70.b-r
        .hotel-payment-step-3

          .m-b-lg
            img.block.pull-left.m-r-sm.m-t-xs(src="img/ico-big-check.png", alt="")
            span.block.pull-left.l-h-2x
              | Pemesanan dan harga untuk&nbsp;
              strong.f-bold MIss Esperanza Kumala Wendyono
              |  telah dikonfirmasi.<br /> Mohon selesaikan pembayaran untuk menghindari pembatalan oleh maskapai.
            span.block.clearfix
          .dashed.clearfix

          h4.section-title.m-t-lg.m-b-lg.text-c-l.text-left.text-rounded Payment

          form.sapta-form.hotel-payment(action="flight-payment-step-5.html", method="GET")
            .payment-method-control.form-inline.m-b-xl
              label.text-u-c.text-md.text-black.m-b-none.f-bold.m-r-md.pull-left Select Payment Method
              .radio.m-t-none.m-b-none.pull-left
                label.m-b-none
                  input(type="radio", name="paymentMethod", value="credit-cart", checked, data-target="#creditCartPaymentMethod")
                  span.inline.m-l-sm Credit Card
              .radio.m-t-none.m-b-none.m-l-lg.pull-left
                label.m-b-none
                  input(type="radio", name="paymentMethod", value="bca-bank-tranfer", data-target="#bankTransferPaymentMethod")
                  span.inline.m-l-sm BCA bank transfer
              span.block.clearfix
            .dashed.clearfix.m-b-xl

            include payment/flight/credit-card

            include payment/flight/bank-transfer

          .dashed.clearfix.m-b-n-md.m-t-lg

          include helpers/ssl-message

      .aside.display-cell.p-t-70
        ul.list-unstyled.bg-yellow
          li.text-md
            span.wrapper.block
              strong.f-bold Order Number&nbsp;
              strong.f-light 378938

        ul.list-unstyled.hotel-booking-summary.m-t-lg
          li
            .block.bg-white.text-center
              span.block.text-md.text-center.m-b-xs Pan Pacific Nirwana Resort Bali
              span.block.bg-white
                i.ico.ico-star
                i.ico.ico-star
                i.ico.ico-star
                i.ico.ico-star
                i.ico.ico-star
          li.bg-light
            .block.m-t-sm
              img.m-auto.block(src="img/destinations/room02.jpg", width="122", height="122")
              span.block.f-bold.m-t-sm.text-center Twin Room Standard

          li
            .block.bg-white
              i.ico.ico-time
              span.inline.light 2 Nights

          li
            .block.bg-white.hotel-check-in-date
              i.ico.ico-hotel-in
              span.light Kamis,
              span.f-bold 12 Feb '15

          li
            .block.bg-white.hotel-check-in-date
              i.ico.ico-hotel-out
              span.light Kamis,
              span.f-bold 12 Feb '15

          li
            .block.bg-white
              i.ico.ico-adult
              span.inline
                span#count-adult 2
                |  Person

          li
            .block.bg-white.room-count-block
              i.ico.ico-room
              span.inline
                span#count-room 1
                |  Rooms

        ul.list-unstyled.tour-pricing.m-t-lg
          li
            span.block Total Price
          li
            span.block.gray.text-u-c Twin Room Standard
            span.block.light 2 x USD 150
            strong.block $ 300
          li
            span.block.gray.text-u-c Tax Fee
            strong.block $ 50
          li.bg-light
            span.block.gray.text-u-c Total Price
            span.block.text-primary.pricing
              span.currency USD
              span.price
                span $
                span.number 7020
