extends layouts/default

include include/mixin

mixin dealInfo(region, destination, day, price)
  .dealinfo
    .wrapper-md
      label.text-light.text-sm.text-u-c.block #{region}
      a.text-lg.title.text-u-c(href="#") #{destination}

    .bg-white.pos-rtl

      a.days-trip.text-center(href="#")
        i.ico.ico-time
        span.count #{day}
        label.text-u-c.text-sm DAYS

      a.pricing.text-center(href="#")
        label.block.text-u-c FROM
        span.currency  $
        span.price #{price}
  .rollover.bg-orange.pos-abt
    .wrapper-lg.text-center.bg-white
      .ico.ico-hotel

      .cities.block.m-t-sm.m-b-lg
        a.inline(href="tour-detail.html") Dubai
