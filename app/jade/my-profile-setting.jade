extends layouts/default

include include/mixin

block main
  mixin headerActive('')

  .account-page.p-t-70
    .banner
      h2.head-title.text-white.text-center My Account

    .my-profile-page.sidebar-gray
      .wrapping-gray
      .container.display-table

        .aside.display-cell.p-t-70.pull-right
          mixin myAccountMenu('profile')

          .clearfix.wrapper-xl

        .content-right.display-cell.p-t-70.b-l.m-b-xl
          .my-profile-block
            h3.title-block.text-rounded.m-b-lg
              | Profile&nbsp;
              span.text-yellow Setting

            form.sapta-form.user-profile.m-t(method="GET", action="mobile/profile.html")
              .content-block.pad10.b-dashed-b-gray
                p   You can change your account detail by directly typing on the text fields. Leave the text fields as they are if you do not wish to change them.

                .block.m-t-xs.m-l-xs.m-b-md
                  .pull-left.text-center
                    a.connect-with-fb.inline.m-r.m-b-sm(href="#") Connected with Facebook
                  .pull-left.pos-rlt.m-r
                    figure.inline.m-n
                      img(src="img/destinations/packing.jpg", alt="", width="40", height="40")
                    span.inline.bg-white.m-l-sm.m-t-xs
                      i.ico.ico-check
                  .pull-left.b-l.b-dotted-l-gray.padder.m-t-xs
                    a.m-r.text-orange.block.m-t-xs.m-b-xs(href="#") Disconnect

                  .clearfix

                .form-group.m-r.pull-left
                  .boxing.selectbox.title.b.pos-rlt
                    label.block.text-xs Title
                    select.block(name="")
                      option(value="Miss") Miss
                      option(value="Mr") Mr
                      option(value="Mrs") Mrs

                .form-group.pull-left
                  .boxing.b.passport
                    label.block.text-xs Name as written in passport
                    input.block.m-b-xs(type="text", placeholder="", value="Anissa Sudirman")

                .clearfix

                .form-group.m-r.pull-left
                  .boxing.phone-number.b
                    label.block.text-xs Phone Number
                    input.bloc.m-b-xs(type="text", value="", placeholder="+62 (home or mobile number)")

                .form-group.pull-left
                  .boxing.email.b
                    label.block.text-xs Email
                    input.block.m-b-xs(type="text", value="Anissa@gmail.com")

                .form-group.pull-left.m-r
                  .boxing.b
                    label.block.text-xs Passport Number
                    input.bloc.m-b-xs(type="text", value="A 893720")

                .form-group.pull-left
                  .boxing.nationality.selectbox.b.pos-rlt
                    label.block.text-xs Nationality
                    select.block(name="")
                      option(value="Indonesian", selected) Indonesian
                      option(value="Malaysian") Malaysian
                      option(value="Indian") Indian
                      option(value="Singaporean") Singaporean
                .clearfix

                .form-group
                  .pull-left.m-r
                    .boxing.bod.selectbox.b.pos-rlt
                      label.block.text-xs Day of Birth
                      select(name="day")
                        option(selected="selected", value="29") 29
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4

                  .pull-left.m-r
                    .boxing.bod.selectbox.b.pos-rlt
                      label.block.text-xs Month of Birth
                      select(name="month")
                        option(value="01") 01
                        option(value="02") 02
                        option(value="03") 03
                        option(value="04") 04
                        option(value="05") 05
                        option(value="06") 06
                        option(value="07") 07
                        option(selected="selected", value="08") 08
                        option(value="09") 09
                        option(value="10") 10
                        option(value="11") 11
                        option(value="12") 12

                  .pull-left
                    .boxing.bod.selectbox.b.pos-rlt
                      label.block.text-xs Year of Birth
                      select(name="year")
                        option(value="1987") 1987
                        option(value="1986", selected) 1986
                        option(value="1985") 1985
                        option(value="1984") 1984
                        option(value="1983") 1983
                        option(value="1982") 1982
                  .clearfix

                .b-dashed-b-gray.m-t-lg.m-b-lg

                .chage-password-block
                  h4.m-t-md.m-b
                    span.text-u-c.f-bold.text-14px PASSWORD
                    label.text-orange.text-sm.text-light.m-l-md Changes Password

                  .form-group.pull-left.m-r
                    .boxing.password.b.m-b.pos-rlt
                      label.block.text-xs Password
                      input.bloc.m-b-xs(type="password", value="Password")

                  .form-group.pull-left.m-r
                    .boxing.password.b.m-b-xs.pos-rlt
                      label.block.text-xs Re-Enter Password
                      input.bloc.m-b-xs(type="password", placeholder="Re-enter Password")
                  .clearfix

              .m-t-lg.m-b-lg
                button.btn.btn-primary.btn-submit.text-u-c.block.pull-right.m-b-lg(type="submit") Save Changes
                .clearfix

