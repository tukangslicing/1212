    mixin featuredDestination('Tokyo.jpg', 'Tokyo', 'Economy Return', '<span class="pricing block f-bold"><span class="currency">$</span><span class="price text-lg">800</span></span>', 'flight')

    mixin featuredDestination('Bali-02.jpg', 'Bali', 'Economy Return', '<span class="pricing block f-bold"><span class="currency">$</span><span class="price text-lg">800</span></span>', 'flight')
