extends layouts/default

include includes/mixin

block main
  .empty-search-message.flights.m-b-md.b-b
    .text-center.l-h
      strong.f-bold Sorry we can't find anything that matches your search.
      |  Please try a different search, or check out our deals below.

  .top-banner
    h3.text-md.m-b-lg.m-t-sm.text-u-c.text-center Great Value Fares

  .featured-destination-list
