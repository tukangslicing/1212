extends layouts/default

include includes/mixin

block main
  .hotel-booking-block.hotel-booking-step-3
    .hotel-booking-header.b-b
      .tour-title.f-bold.text-14px Pan Pacific Nirwana Resort Bali
      a.text-orange(href='#') Detail Pemesanan

    form.sapta-form(id="flightBookingStep1", method="GET", action="mobile/hotel-booking-4.html")

      .hotel-booking-progress.step-3
        span.current Details
        span Review
        span Payment
        span Ticket

      .info-text-pemesanan.pos-rlt
        i.ico.ico-mobile.ico-check
        p Pemesanan dan harga untuk
          strong.guest-name MIss Esperanza Kumala Wendyono
          |  telah dikonfirmasi. Mohon selesaikan pembayaran untuk menghindari pembatalan oleh maskapai.

      .b-b.m-r-n-md.m-l-n-md.m-t-md

      .block.payment-type
        label.block.text-u-c.text-black.m-t.f-bold.m-r-md.text-14px Select Payment Method

        .radio.m-t.m-b-none.pull-left
          label.m-b-none
            input(type="radio", name="paymentMethod", value="credit-cart")
            span.inline.m-l-sm.text-14px Credit Card

        .radio.m-t.m-b-none.m-l-lg.pull-left
          label.m-b-none
            input(type="radio", name="paymentMethod", value="bca-bank-tranfer")
            span.inline.m-l-sm.text-14px BCA bank transfer

        .clearfix

      .b-b.m-r-n-md.m-l-n-md.m-t-md

      .block.credit-card-payment
        label.block.text-u-c.text-black.m-t.m-b.f-bold.m-r-md.text-14px Credit Card Payment
        .radio.m-r-xs.inline
          label
            input(type="radio", value="visa")
            img.m-l-sm(src="img/card-visa.png", alt="Visa Card", width="44")

        .radio.m-l-sm.m-r-xs.inline
          label
            input(type="radio", value="master-card")
            img.m-l-sm(src="img/card-master-card.png", alt="Master Card", width="44")

        .radio.m-l-sm.inline
          label
            input(type="radio", value="american-express")
            img.m-l-sm(src="img/card-american-express.png", alt="American Express Card", width="44")
        .clearfix

        .m-t-md
          .boxing.cc-number.b.b.m-b.m-r-md
            label.block.text-xs.m-b-sm Credit Card Number
            input.cc-number.credit-card-input(type="tel", autocomplete="cc-number", placeholder="•••• •••• •••• ••••")

          .boxing.b.ccv.b.m-b
            label.block.text-xs.m-b-sm CCV 3 Digit
            input.cc-cvc(type="text", pattern="\d+", name="ccv", maxlength="3", placeholder="XXX")
          .clearfix

        .form-group
          .boxing.selectbox.inline.m-r-md.b.pos-rlt
            label.block.text-xs Expired on Month
            select(name="month")
              option January
              option February
              option March
              option April
              option May
              option June
              option July
              option August
              option September
              option October
              option November
              option(selected="selected") Desember

          .boxing.selectbox.inline.b.pos-rlt.m-r-none
            label.block.text-xs Expired on Year
            select(name="year")
              option 2015
              option 2016
              option(selected="selected") 2017
              option 2018
              option 2019
              option 2020
              option 2021

      .b-b.m-r-n-md.m-l-n-md.m-t-md

      .block.billing-address-block.m-t-md

        .boxing.name.b.b
          label.block.text-xs.m-b-sm Name as written in Credit Card
          input.credit-card-input(type="text", value="Anissa Sudirman")

        .boxing.selectbox.m-t.b.pos-rlt
          label.block.text-xs Country
          select(name="country")
            option(selected="selected") Indonesia
            option Singapore
            option Malaysia
            option Thailand
            option Vietname
            option India
            option Australia

        .boxing.selectbox.m-t.b.pos-rlt
          label.block.text-xs City
          select(name="city")
            option(selected="selected") Jakarta
            option Bandung
            option Surabaya
            option Medan
            option Semarang


        .boxing.phone-number.b.m-t.b
          label.block.text-xs.m-b-sm Phone Number
          input.credit-card-input(type="text", value="08123456789")

        .boxing.post-code.b.b.inline.m-t
          label.block.text-xs.m-b-sm Post Code
          input.credit-card-input(type="text", value="11520")

        p.text-sm.m-t-md
          | Dengan mengklik tombol Make Payment, Anda telah menyetujui&nbsp;
          a.text-yellow(href="#") Syarat dan Ketentuan
          | &nbsp;dan&nbsp;
          a.text-yellow(href="#") Kebijakan Privasi
          |  Saptatour.com
      .b-b.m-r-n-md.m-l-n-md.m-t-md

      .m-t-md
        button.btn.btn-primary.btn-submit.text-u-c(type="submit") Continue

      .m-b-md
